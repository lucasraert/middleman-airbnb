<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div id="banner-flats" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 30%, rgba(0,0,0,0.4) 80%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');"></div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width: "80px" %>
            <p><%= flat.first_name %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star"></i>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="">
          <h4>Book this flat</h4>
          <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkin">
            </div>
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
          </div>
          </div>
            <div class="form-group">
              <select name="guests" id="" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div id="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p><%= flat.details %></p>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accomodates: <strong><%= flat.accomodates %></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <li class="list-unstyled">Beds: <strong>1</strong></li>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
